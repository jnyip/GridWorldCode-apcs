
import info.gridworld.actor.Bug;

public class DancingBug extends Bug
{
    private int[] Directions;
    public DancingBug(int[] nums)
    {
	Directions = nums;
    }
    public void act()
    {
	for (int i = 0; i < Directions.length; i++){
	    setDirection(Directions[i]);
	    if (canMove){
		move();
	    }
	    else {}
	}
    }
}
